/* pages/car/car.wxss */
.container{
  padding: 0;
}
.header {
  width: 100%;
  padding: 10px;
  border-bottom: 1px solid #ddd;
  position: fixed;
  z-index: 1001;
  background: white
}
.header text{
  font-size: 15px;
  padding-left: 10px;
}

.scroll {
 margin-bottom: 120rpx;
 margin-left: 0;
 margin-top:120rpx;
}
.scroll .list{
  display: flex;
  width: 100%;
  height: 150px;
  border-bottom: 1px solid #ddd;
  padding: 10px;
  justify-content: center;
}
.scroll .list>view{
  align-items: center;
}
.scroll .list .check{
  width: 10%;

}
.scroll .list .check checkbox{
  margin-top:20px;
}
.scroll .list .pic{
  width: 30%;
}
.scroll .list .pic image{
  width: 100%;
  height: 100px;
}
.scroll .list .detail{
  width: 60%;
  
}
.scroll .list .detail>text{
  padding-bottom: 40px;
  font-size: 14px;
}
.scroll .list .detail .info{
  width: 100%;
  display: flex;
  justify-content: space-around;
}
.scroll .list .detail .info text{
  width: 100px;
  font-size: 14px;
  padding-top: 50px;
}
.scroll .list .detail .info view{
  width:320px;
  height: 50px;
  padding-top: 40px;
}
.scroll .list .detail .info view button{
  width: 30px;
  height: 30px;
  position: relative;
  color: black;
  line-height: 30px;
  border-radius: 0;
}
.scroll .list .detail button.del{
  padding:5px;
  width:50px;
  height: 30px;
  font-size: 12px;
  color: white;
  background: black;
  margin-right: 10px;
  line-height: 20px;
  position:absolute;

}

.row {
 display: flex;
 flex-direction: row;
 align-items: center;
}
.bottom_line {
 width: 100%;
 height: 2rpx;
 background: lightgray;
}
.bottom_total {
 position: fixed;
 display: flex;
 flex-direction: column;
 bottom: 0;
 width: 100%;
 height: 120rpx;
 line-height: 120rpx;
 background: white;
}
.bottom_total checkbox{
  margin-left: 20rpx;
}
.button-red {
 background-color:black; /* 红色 */
}
button {
 position: fixed;
 right: 0;
 color: white;
 text-align: center;
 display: inline-block;
 font-size: 30rpx;
 border-radius: 0rpx;
 width: 30%;
 height: 120rpx;
 line-height: 120rpx;
}
.small_text{
  padding-right:60rpx;
}